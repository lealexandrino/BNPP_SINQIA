@model Domain.MovimentoManual

@{
    ViewData["Title"] = "Edit";
}

<h2>Edição</h2>

<h4>Movimento Manual</h4>
<hr />
<div class="row">
    <form asp-action="Edit">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="NumLancamento" />
        <input type="hidden" asp-for="DatMes" />
        <input type="hidden" asp-for="DatAno" />
        <input type="hidden" asp-for="CodProduto" />
        <input type="hidden" asp-for="CodCosif" />
        <input type="hidden" asp-for="DatMovimento" />
        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="DatMes" class="control-label">Mês</label>
                <input asp-for="DatMes" class="form-control" disabled="disabled" />
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="DatAno" class="control-label">Ano</label>
                <input asp-for="DatAno" class="form-control" disabled="disabled" />
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="CodProduto" class="control-label">Código Produto</label>
                <input asp-for="CodProduto" class="form-control" disabled="disabled" />
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="CodCosif" class="control-label">Código Cosif</label>
                <input asp-for="CodCosif" class="form-control" disabled="disabled" />
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="ValValor" class="control-label"> Valor</label>
                <input asp-for="ValValor" class="form-control" />
            </div>
        </div>
        <div class="col-md-12">
            <div class="form-group">
                <label asp-for="DesDescricao" class="control-label">Descrição</label>
                ​<textarea asp-for="DesDescricao" id="txtArea" class="form-control" rows="10" cols="70"></textarea>
                <span asp-validation-for="DesDescricao" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-default" />
            </div>
        </div>
    </form>
</div>

<div>
    <a asp-action="Index">Voltar para a Consulta</a>
</div>

