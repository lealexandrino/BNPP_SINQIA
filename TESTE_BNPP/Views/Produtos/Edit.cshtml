@model Domain.Produto

@{
    ViewData["Title"] = "Edit";
}

<h2>Edição</h2>

<h4>Produto</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="CodProduto" />
            <div class="form-group">
                <label asp-for="DesProduto" class="control-label">Descrição</label>
                <input asp-for="DesProduto" class="form-control" />
                <span asp-validation-for="DesProduto" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StaStatus" class="control-label">Status</label>
                <select asp-for="StaStatus" class="form-control">
                    <option value="A">Ativo</option>
                    <option value="I">Inativo</option>
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar para a Consulta</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
